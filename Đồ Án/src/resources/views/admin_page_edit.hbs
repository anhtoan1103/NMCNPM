<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Trang thông tin tài khoản</h1>
      <hr>
      <form action="/admin_page/{{user._id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Tên người dùng</label>
          <input type="text" class="form-control" name="name" id="name" value="{{user.name}}" placeholder="Khách sạn ">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" class="form-control" name="email" id="email" value="{{user.email}}"
            placeholder="Tỉnh">
        </div>
        <div class="form-group">
          <label for="password">Mật khẩu</label>
          <input type="text" class="form-control" name="password" id="password" value="{{user.password}}" placeholder="VND">
        </div>
        <button type="submit" class="btn btn-primary">Sửa</button>

      </form>

    </div>
  </div>
</div>