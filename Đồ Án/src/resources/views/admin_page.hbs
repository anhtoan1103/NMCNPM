<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Trang thông tin tài khoản</h1>
      <a href="/admin_page" class="btn btn-primary btn-sm">Quản lý người thuê</a>
      <hr>
      <a href="/admin_page1" class="btn btn-primary btn-sm">Quản lý người cho thuê</a>
      <hr>
      <hr>

      {{#each users}}
      <div style="border-style: solid !important; margin-top: 20px"> 
        <div class="form-group" >
             <label for=" email">Email</label>
          <h5>{{this.email}}</h5>
        </div>
        <div class="form-group">
          <label for="name">Name</label>

          <h5> {{this.name}} </h5>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <h5> {{this.password}} </h5>
        </div>
        <a href="/admin_page/delete/{{this._id}}" onclick="return confirm(Are your sure?)"
          class="btn btn-primary btn-sm">Delete</a>
        <hr>
        <a href="/admin_page/{{this._id}}/edit" class="btn btn-primary btn-sm">Change</a>

        <hr>
      </div>

      {{/each}}

    </div>
  </div>
</div>