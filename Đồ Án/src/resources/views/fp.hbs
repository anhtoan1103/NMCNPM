<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Quên mật khẩu</h1>

      <form action="/password/fp" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Nhập email khôi phục mật khẩu</button>
      </form>
        {{message}}
      <p class="lead mt-4">
        Không có tài khoản? <a href="/register">Đăng kí</a>
      </p>
        <p class="lead mt-4">
            Thử đăng nhập? <a href="/login">Đăng nhập</a>
        </p>
    </div>
  </div>
</div>
