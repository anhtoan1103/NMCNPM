<script>
  //session
  function saveSession(key, value) {
    localStorage.setItem(key, value);
  }

  function clearSession() {
    localStorage.clear();
  }

  function logout() {
    clearSession();
    //manageButtons();
    window.location.href = '/';
  }

  function manageButtons() {
    if (!localStorage.getItem('username')) {
      document.getElementById('btn-login').style.display = "block";
      document.getElementById('btn-register').style.display = "block";
      document.getElementsByClassName('a').style = "color: #003580"; 
      document.getElementById('navbarDropdown1').className+= "disable"; 
    } else {
      document.getElementById('user-name').innerHTML = localStorage.getItem('username');
      document.getElementById('btn-login').style.display = "none";
      document.getElementById('btn-register').style.display = "none";
      document.getElementById('btn-userName').style.display = "block";
      document.getElementById('navbarDropdown1').style.display = "block";

    }
  }
manageButtons();

</script>