<div class="mt-4">
    <div class="row">
        {{#each tests}}
        {{#if (pageNumChange @index )}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <a href="/hotel/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <a href="/hotel/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary"></a>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
<script>
    let user = document.getElementById('user-data').value;
    let username = user.split('name:')[1].split(',')[0].replace("'", '').replace("'", '') || ``;
    document.getElementById('user-name').innerHTML = username;
    saveSession('username', username);
    document.cookie = 'username1 = '+ username + ';';
    manageButtons();   
</script>